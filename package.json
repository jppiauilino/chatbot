  "version": "1.0.0",
  "description": "Painel de Controle para o ChatBot de WhatsApp.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
